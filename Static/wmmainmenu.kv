<WMMainMenu>:
    auto_dismiss: True
    title: 'Main Menu'
    size_hint: (None, None)
    size: (640, 590)
    layout: layout
    BoxLayout:
        orientation: 'vertical'
		padding: (0, 5)
        GridLayout:
            id: layout
            cols: 3
            row_force_default: True
            row_default_height: 45
            orientation: 'vertical'
            spacing: (5, 10)
            padding: (10, 10)

            status_label: status_label
            sniff_button: sniff_button
            sniff_interfaces: sniff_interfaces
            read_button: read_button
            save_button: save_button
            clear_capture_button: clear_capture_button
            capture_button: capture_button

            time_label: time_label
            memory_label: memory_label
            packet_label: packet_label
            channel_button: channel_button
            channel_reset_button: channel_reset_button
            channel_stat_button: channel_stat_button
            channel_input: channel_input
            fps_label: fps_label

            canvas:
                Color:
                    rgba: 0.5, 0.5, 0.5, 0.25
                Rectangle:
                    pos: self.pos
                    size: self.size

			#ACTIONS

            Widget:
            Label:
                text: "Actions"
                font_size: '24sp'
                markup: True
            Widget:

			#Sniffer

            Label:
                id: status_label
                text: "Not sniffing"
            Button:
                id: sniff_button
                text: 'Sniff Interface'
                on_release: root.sniff()
            Label:
                id: sniff_interfaces
                padding: (20, 0)
                text: "No interface"
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]

			#Capture

            Button:
                id: capture_button
                text: 'Start Capture'
                on_release: root.capture_pcap()
            Button:
                id: save_button
                text: 'Save Capture'
                on_release: root.save_capture()
            Button:
                id: clear_capture_button
                text: 'Clear Capture'
                on_release: root.clear_capture()

			#Offline

            Button:
                id: read_button
                text: 'Read File'
                on_release: root.read_file()
            Button:
                id: dump_button
                text: 'Dump Data'
                on_release: root.dump_wm_data()
            Button:
                id: settings_button
                text: 'Open Settings'
                on_release: root.open_settings()

			#STATS

            Widget:
            Label:
                text: "Stats"
                font_size: '24sp'
                markup: True
            Widget:

            Label:
				id: time_label
				text: "Time spent: 29m30s"
            Label:
                id: memory_label
                text: "2%"
            Label:
                id: packet_label
                text: "25000 packets"

			#Channels

            Label:
                text: "Channels: "
            TextInput:
                id: channel_input
                hint_text: "1, 2, 3..."
                font_size: '14sp'
                multiline: False
            Button:
                id: channel_reset_button
                text: 'Reset Channels'
                on_release: root.reset_channels()

			#Stats

            Label:
                id: fps_label
                text: "60.0 FPS"
			Button:
                id: channel_button
                text: 'Channel Hop Interface'
                on_release: root.set_channel_interface()
            Button:
				id: channel_stat_button
				text: "Channel stat"
				on_release: root.open_channel_stat()

		WMSeparator:

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
			height: 60
			padding: (5, 0)
            Widget:
            Button:
                text: 'Exit'
                size_hint: (None, None)
                height: 50
                width: 50
                on_release: root.cancel()

