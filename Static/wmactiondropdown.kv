#:kivy 1.9.0

<WMActionDropDown>:
        text: "DropDown"
        width: 200
        canvas.before:
                Color:
                        rgba: (0, 0, 0, 1)
                Rectangle:
                        pos: self.pos
                        size: self.size
        Button:
                text: 'My first Item'
                size_hint_y: None
                height: 44
                on_release: root.select('item1')
        Label:
                text: 'Unselectable item'
                size_hint_y: None
                height: 44
        Button:
                text: 'My second Item'
                size_hint_y: None
                height: 44
                on_release: root.select('item2')
