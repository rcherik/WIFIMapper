<APCardInfoScreen>:
        main_layout: main_layout
        card_layout: card_layout
        info_box: info_box
        security_box: security_box
        data_box: data_box
        station_lst: station_lst
        station_hist_lst: station_hist_lst
        
        BoxLayout:
                id: main_layout
                orientation: 'vertical'
                BoxLayout:
                        id: btn_layout
                        size: (64, 64)
                        size_hint: (1, None)
                        Button:
                                id: some_static_button
                                text: "Some static from card button"
                                color: (1, 0, 0, 1)
                                background_color: (.3, .3, .3, 1)

                BoxLayout:
                        orientation: 'horizontal'
                        BoxLayout:
                                orientation: 'vertical'
                                padding: 50
                                spacing: 20
                                size_hint: (None, 1)
                                width: 500
                                BoxLayout:
                                        orientation: 'vertical'
                                        id: card_layout
                                        canvas.before:
                                                Color:
                                                        rgba: (1, 1, 1, 0.25)
                                                Rectangle:
                                                        pos: self.pos
                                                        size: self.size
                                        BoxLayout:
                                                id: info_box
                                                orientation: 'vertical'
                                                bssid: bssid
                                                ssid: ssid
                                                size_hint: (1, 0.2)
                                                Label:
                                                        id: bssid
                                                        markup: True
                                                Label:
                                                        id: ssid
                                                        markup: True
                                        BoxLayout:
                                                id: security_box
                                                size_hint: (1, 0.1)
                                                orientation: 'horizontal'
                                                security: security
                                                co: co
                                                Label:
                                                        id: security
                                                        size_hint: (0.5, 1)
                                                        markup: True
                                                Label:
                                                        id: co
                                                        size_hint: (0.5, 1)
                                                        markup: True
                                        Widget:
                                                id: separator
                                                size_hint_y: None
                                                height: 6
                                                canvas:
                                                        Color:
                                                                rgb: (0, 0, 0, 0.25)
                                                        Rectangle:
                                                                pos: separator.x, separator.center_y
                                                                size: separator.width, 2
                                        BoxLayout:
                                                id: data_box
                                                size_hint: (1, 0.2)
                                                orientation: 'horizontal'
                                                rcv: rcv
                                                sent: sent
                                                beacons: beacons
                                                signal: signal
                                                BoxLayout:
                                                        orientation: 'vertical'
                                                        size_hint: (0.5, 1)
                                                        Label:
                                                                id: sent
                                                                size_hint: (1, 0.5)
                                                                markup: True
                                                        Label:
                                                                id: rcv
                                                                size_hint: (1, 0.5)
                                                                markup: True
                                                BoxLayout:
                                                        orientation: 'vertical'
                                                        size_hint: (0.5, 1)
                                                        Label:
                                                                id: beacons
                                                                size_hint: (1, 0.5)
                                                                markup: True
                                                        Label:
                                                                id: signal
                                                                size_hint: (1, 0.5)
                                                                markup: True
                                        Widget:
                                                id: separator
                                                size_hint_y: None
                                                height: 6
                                                canvas:
                                                        Color:
                                                                rgb: (0, 0, 0, 0.25)
                                                        Rectangle:
                                                                pos: separator.x, separator.center_y
                                                                size: separator.width, 2
                                        BoxLayout:
                                                orientation: 'horizontal'
                                                size_hint: (1, 0.1)
                                                Label:
                                                        text: "Connected"
                                                        size_hint: (0.5, 1)
                                                Label:
                                                        text: "History"
                                                        size_hint: (0.5, 1)
                                        BoxLayout:
                                                orientation: 'horizontal'
                                                BoxLayout:
                                                        orientation: 'vertical'
                                                        size_hint_x: 0.5
                                                        ScrollView:
                                                                id: station_lst
                                                                box: station_box
                                                                canvas.before:
                                                                        Color:
                                                                                rgba: (1, 1, 1, 0.33)
                                                                        Rectangle:
                                                                                pos: self.pos
                                                                                size: self.size
                                                                GridLayout:
                                                                        id: station_box
                                                                        cols: 1
                                                                        size_hint_y: None
                                                                        height: self.minimum_height
                                                                        spacing: 30
                                                                        padding: (0, 20)
                                                BoxLayout:
                                                        orientation: 'vertical'
                                                        size_hint_x: 0.5
                                                        ScrollView:
                                                                id: station_hist_lst
                                                                box: station_hist_box
                                                                canvas.before:
                                                                        Color:
                                                                                rgba: (1, 1, 1, 0.33)
                                                                        Rectangle:
                                                                                pos: self.pos
                                                                                size: self.size
                                                                GridLayout:
                                                                        id: station_hist_box
                                                                        cols: 1
                                                                        size_hint_y: None
                                                                        height: self.minimum_height
                                                                        spacing: 30
                                                                        padding: (0, 20)
                        BoxLayout:
                                orientation: 'vertical'
                                padding: 50
                                spacing: 20
                                size_hint: (None, 1)
                                width: 500
                                BoxLayout:
                                        orientation: 'vertical'
                                        canvas.before:
                                                Color:
                                                        rgba: (1, 1, 1, 0.25)
                                                Rectangle:
                                                        pos: self.pos
                                                        size: self.size
                                        BoxLayout:
                                                orientation: 'vertical'
                                                size_hint: (1, 0.1)
                                                Label:
                                                        text: "Attack Zone"
                                                        size_hint: (1, 0.5)
                                                        markup: True
                                        Widget:
