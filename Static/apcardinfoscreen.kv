<APCardInfoInfoBox@BoxLayout>:
		orientation: 'vertical'
		bssid: bssid
		ssid: ssid
		size_hint: (1, 0.2)
		WMSelectableLabel:
				id: bssid
				markup: True
		WMSelectableLabel:
				id: ssid
				markup: True

<APCardInfoSecurityBox@BoxLayout>:
		size_hint: (1, 0.1)
		orientation: 'horizontal'
		security: security
		co: co
		Label:
				id: security
				size_hint: (0.5, 1)
				markup: True
		Label:
				id: co
				size_hint: (0.5, 1)
				markup: True

<APCardInfoDataBox@BoxLayout>:
		size_hint: (1, 0.2)
		orientation: 'horizontal'
		rcv: rcv
		sent: sent
		beacons: beacons
		signal: signal
		BoxLayout:
				orientation: 'vertical'
				size_hint: (0.5, 1)
				Label:
						id: sent
						size_hint: (1, 0.5)
						markup: True
				Label:
						id: rcv
						size_hint: (1, 0.5)
						markup: True
		BoxLayout:
				orientation: 'vertical'
				size_hint: (0.5, 1)
				Label:
						id: beacons
						size_hint: (1, 0.5)
						markup: True
				Label:
						id: signal
						size_hint: (1, 0.5)
						markup: True

<APCardInfoSeparator@Widget>:
		id: separator
		size_hint_y: None
		height: 6
		canvas:
				Color:
						rgb: (0, 0, 0, 0.25)
				Rectangle:
						pos: separator.x, separator.center_y
						size: separator.width, 2

<APCardInfoClientConnectedBox@BoxLayout>:
		box: station_box
		orientation: 'vertical'
		size_hint_x: 0.55
		ScrollView:
				canvas.before:
						Color:
								rgba: (1, 1, 1, 0.33)
						Rectangle:
								pos: self.pos
								size: self.size
				GridLayout:
						id: station_box
						cols: 2
						size_hint_y: None
						height: self.minimum_height
						row_force_default: True
						row_default_height: 20
						#spacing: (0, 30)
						#padding: (20, 20)
                		padding: (10, 10)
						spacing: (0, 5)

<APCardInfoClientHistoryBox@BoxLayout>:
		box: station_hist_box
		orientation: 'vertical'
		size_hint_x: 0.45
		ScrollView:
				canvas.before:
						Color:
								rgba: (1, 1, 1, 0.33)
						Rectangle:
								pos: self.pos
								size: self.size
				GridLayout:
						id: station_hist_box
						cols: 1
						size_hint_y: None
						height: self.minimum_height
						row_force_default: True
						row_default_height: 20
						#spacing: (0, 30)
						#padding: (0, 20)
                		padding: (10, 10)
						spacing: (0, 5)

<APCardInfoAttackBox@BoxLayout>:
		orientation: 'vertical'
		disco_button: disco_button
		disco_loop_button: disco_loop_button
		geolocation_button: geolocation_button
		mitm_button: mitm_button
		canvas.before:
				Color:
						rgba: (1, 1, 1, 0.25)
				Rectangle:
						pos: self.pos
						size: self.size
		BoxLayout:
				orientation: 'vertical'
				size_hint: (1, 0.15)
				Label:
						text: "Attack Zone"
						size_hint: (1, 1)
						markup: True
		GridLayout:
				cols: 2
				row_force_default: True
				row_default_height: 30
				padding: (10, 10)
				spacing: (10, 10)
				Button:
						id: disco_button
						text: "Disconnect Stations"
				Button:
						id: disco_loop_button
						text: "Disconnect Loop Stations"
				Button:
						id: geolocation_button
						text: "Geolocation"
				Button:
						id: mitm_button
						text: "Man in the middle"

<APCardInfoGraphBox@BoxLayout>:
		graph_buttons: graph_buttons
		graph: graph
		orientation: 'vertical'
		canvas.before:
				Color:
						rgba: (1, 1, 1, 0.25)
				Rectangle:
						pos: self.pos
						size: self.size
		BoxLayout:
				orientation: 'vertical'
				size_hint: (1, None)
				height: 30
				Label:
						text: "Graph Zone"
						markup: True
		BoxLayout:
				id: graph_buttons
				orientation: 'horizontal'
				size_hint: (1, None)
				height: 30
				spacing: 20
				padding: (20, 0)
		BoxLayout:
				id: graph
				padding: (10, 10)
				orientation: 'vertical'

<APCardInfoScreen>:
        main_layout: main_layout
        card_layout: card_layout
        info_box: info_box
        security_box: security_box
        data_box: data_box
        station_lst: station_lst
        station_hist_lst: station_hist_lst
		graph_box: graph_box
		attack_box: attack_box
		checkbox_all: checkbox_all
        BoxLayout:
                id: main_layout
                orientation: 'vertical'
                BoxLayout:
                        orientation: 'horizontal'
						#First Box - Info zone
                        BoxLayout:
                                orientation: 'vertical'
                                padding: 50
                                spacing: 10
                                size_hint: (None, 1)
                                width: 650
								#First part - Info
                                BoxLayout:
                                        orientation: 'vertical'
                                        id: card_layout
                                        canvas.before:
                                                Color:
                                                        rgba: (1, 1, 1, 0.25)
                                                Rectangle:
                                                        pos: self.pos
                                                        size: self.size
										APCardInfoInfoBox:
												id: info_box
                                        APCardInfoSecurityBox:
                                                id: security_box
                                        APCardInfoSeparator:
                                        APCardInfoDataBox:
                                                id: data_box
                                        APCardInfoSeparator:
                                        BoxLayout:
                                                orientation: 'horizontal'
                                                size_hint: (1, 0.1)
												CheckBox:
														id: checkbox_all
														size_hint: (0.055, 1)
												#Widget:
                                                #        size_hint: (0.045, 1)
                                                Label:
                                                        text: "Connected (sent/recv)"
                                                #        size_hint: (0.2, 1)
                                                        size_hint: (0.4, 1)
												#Widget:
                                                #        size_hint: (0.1, 1)
                                                Label:
                                                        text: "History"
                                                        size_hint: (0.45, 1)
										#Second part - Lists
                                        BoxLayout:
                                                orientation: 'horizontal'
                                                APCardInfoClientConnectedBox:
														id: station_lst
                                                APCardInfoClientHistoryBox:
                                                        id: station_hist_lst

						#Second box - Graph and attack zone
                        BoxLayout:
                                orientation: 'vertical'
                                padding: 20
                                spacing: 10
                                size_hint: (None, 1)
                                width: 500
                                APCardInfoAttackBox:
										id: attack_box
                                APCardInfoGraphBox:
										id: graph_box
