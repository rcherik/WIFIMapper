<StationCardInfoInfoBox>:
		orientation: 'vertical'
		bssid: bssid
		ap_bssid: ap_bssid
		size_hint: (1, 0.2)
		WMSelectableLabel:
				id: bssid
				markup: True
		WMSelectableLabel:
				id: ap_bssid
				markup: True

<StationCardInfoDataBox>:
		size_hint: (1, 0.1)
		orientation: 'horizontal'
		rcv: rcv
		sent: sent
		signal: signal
		Label:
				id: sent
				size_hint: (0.33, 1)
				markup: True
		Label:
				id: rcv
				size_hint: (0.33, 1)
				markup: True
		Label:
				id: signal
				size_hint: (0.33, 1)
				markup: True

<StationCardInfoSeparator@Widget>:
		id: separator
		size_hint_y: None
		height: 6
		canvas:
				Color:
						rgb: (0, 0, 0, 0.25)
				Rectangle:
						pos: separator.x, separator.center_y
						size: separator.width, 2

<StationCardInfoHistoryBox>:
		box: hist_box
		orientation: 'vertical'
		size_hint_x: 1
		ScrollView:
				canvas.before:
						Color:
								rgba: (1, 1, 1, 0.33)
						Rectangle:
								pos: self.pos
								size: self.size
				GridLayout:
						id: hist_box
						cols: 1
						size_hint_y: None
						height: self.minimum_height
						spacing: (0, 30)
						padding: (0, 20)

<StationCardInfoAttackBox>:
		orientation: 'vertical'
		canvas.before:
				Color:
						rgba: (1, 1, 1, 0.25)
				Rectangle:
						pos: self.pos
						size: self.size
		BoxLayout:
				orientation: 'vertical'
				size_hint: (1, 0.15)
				Label:
						text: "Attack Zone"
						size_hint: (1, 1)
						markup: True
		Widget:

<StationCardInfoGraphBox>:
		graph_buttons: graph_buttons
		graph: graph
		orientation: 'vertical'
		canvas.before:
				Color:
						rgba: (1, 1, 1, 0.25)
				Rectangle:
						pos: self.pos
						size: self.size
		BoxLayout:
				orientation: 'vertical'
				size_hint: (1, None)
				height: 30
				Label:
						text: "Graph Zone"
						markup: True
		BoxLayout:
				id: graph_buttons
				orientation: 'horizontal'
				size_hint: (1, None)
				height: 30
				spacing: 20
				padding: (20, 0)
				Button:
						text: "Create"
				Button:
						text: "Cancel"
		BoxLayout:
				id: graph
				orientation: 'vertical'

<StationCardInfoScreen>:
        main_layout: main_layout
        card_layout: card_layout
        info_box: info_box
        data_box: data_box
		probes: probes
		model: model
        station_hist_lst: station_hist_lst
		graph_box: graph_box
        BoxLayout:
                id: main_layout
                orientation: 'vertical'
                BoxLayout:
                        orientation: 'horizontal'
						#First Box - Info zone
                        BoxLayout:
                                orientation: 'vertical'
                                padding: 50
                                spacing: 10
                                size_hint: (None, 1)
                                width: 500
								#First part - Info
                                BoxLayout:
                                        orientation: 'vertical'
                                        id: card_layout
                                        canvas.before:
                                                Color:
                                                        rgba: (1, 1, 1, 0.25)
                                                Rectangle:
                                                        pos: self.pos
                                                        size: self.size
										StationCardInfoInfoBox:
												id: info_box
                                        StationCardInfoSeparator:
                                        StationCardInfoDataBox:
                                                id: data_box
                                        StationCardInfoSeparator:
										BoxLayout:
												size_hint: (1, 0.1)
												orientation: 'horizontal'
												padding: (10, 0)
												WMSelectableLabel:
														id: probes
														size_hint: (1, 1)
														text_size: self.size
														halign: 'center'
														valign: 'middle'
														markup: True
										BoxLayout:
												size_hint: (1, 0.1)
												orientation: 'horizontal'
												WMSelectableLabel:
														id: model
														size_hint: (1, 0.5)
														markup: True
                                        BoxLayout:
                                                orientation: 'horizontal'
                                                size_hint: (1, 0.1)
                                                Label:
                                                        text: "History"
                                                        size_hint: (1, 1)
										#Second part - Lists
                                        BoxLayout:
                                                orientation: 'horizontal'
                                                StationCardInfoHistoryBox:
                                                        id: station_hist_lst

						#Second box - Graph and attack zone
                        BoxLayout:
                                orientation: 'vertical'
                                padding: 20
                                spacing: 10
                                size_hint: (None, 1)
                                width: 500
                                StationCardInfoAttackBox:
										id: attack_box
                                StationCardInfoGraphBox:
										id: graph_box
