#:kivy 1.9.0
#import WMActionDropDown WMActionDropDown

<CardListScreen>:
        scroll_view: scroll_view
        stack_layout: stack_layout
        action_bar: action_bar
        action_previous: action_previous
        important: important
        toggle: toggle
        dropdown_group: dropdown_group
        overflow_group: overflow_group

        BoxLayout:
                orientation: 'vertical'

                ActionBar:
                        id: action_bar
                        pos_hint: {'top': 1}
                        ActionView:
                                canvas.before:
                                        Color:
                                                rgba: (1, 0, 0, 0.1)
                                        Rectangle:
                                                pos: self.pos
                                                size: self.size
                                use_separator: True
                                ActionPrevious:
                                        id: action_previous
                                        title: 'Action Bar'
                                        with_previous: False
                                ActionOverflow:
                                        #add img atlas://data/images/defaulttheme/overflow
                                ActionButton:
                                        id: important
                                        important: True
                                        text: 'Important'
                                WMActionToggleButton:
                                        id: toggle
                                        text: 'Toggle'
                                        state: 'down'
                                ActionGroup:
                                        id: dropdown_group
                                        text: 'Sort by'
                                        mode: 'spinner'
                                        ActionButton:
                                                text: 'Grp1'
                                        ActionButton:
                                                text: 'Grp2'
                                        ActionButton:
                                                text: 'Grp3'
                                ActionGroup:
                                        id: overflow_group
                                        text: 'Page'
                                        mode: 'normal'
                                        ActionButton:
                                                text: 'Grp1'
                                        ActionButton:
                                                text: 'Grp2'

                ScrollView:
                        id: scroll_view
                        StackLayout:
                                id: stack_layout
                                orientation: 'lr-tb'
                                padding: 10
                                spacing: 10
                                size_hint_y: None

                AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'bottom'
                        size_hint: (1, 0.1)
                        BoxLayout:
                                orientation: 'horizontal'
                                size_hint: (0.5, 0.5)
                                Button:
                                        text: "1"
                                Button:
                                        text: "1"
                                Button:
                                        text: "1"
