#:kivy 1.9.0
#import WMActionDropDown WMActionDropDown

<CardListScreen>:
        scroll_view: scroll_view
        stack_layout: stack_layout
        action_bar: action_bar
        action_previous: action_previous
        label_curr_page: label_curr_page
        label_curr_sort: label_curr_sort
        toggle: toggle
        dropdown_group: dropdown_group
        page_layout: page_layout

        BoxLayout:
                orientation: 'vertical'

                ActionBar:
                        id: action_bar
                        pos_hint: {'top': 1}
                        ActionView:
                                canvas.before:
                                        Color:
                                                rgba: (1, 0, 0, 0.1)
                                        Rectangle:
                                                pos: self.pos
                                                size: self.size
                                use_separator: True
                                ActionPrevious:
                                        id: action_previous
                                        title: 'Action Bar'
                                        with_previous: False
                                ActionOverflow:
                                        #add img atlas://data/images/defaulttheme/overflow
                                WMActionLabel:
                                        id: label_curr_page
                                        important: True
                                        text: 'Important'
                                        width: 100
                                        size_hint: (None, 1)
                                WMActionLabel:
                                        id: label_curr_sort
                                        important: True
                                        text: 'Important'
                                        width: 150
                                        size_hint: (None, 1)
                                WMActionToggleButton:
                                        id: toggle
                                        text: 'Toggle'
                                        state: 'down'
                                ActionGroup:
                                        id: dropdown_group
                                        text: "Sort by"
                                        mode: 'spinner'

                WMCardScrollView:
                        id: scroll_view
                        bar_width: 2
                        scroll_type: ['content']
                        StackLayout:
                                id: stack_layout
                                orientation: 'lr-tb'
                                padding: 10
                                spacing: 10
                                size_hint_y: None

                BoxLayout:
                        size_hint: (1, 0.05)
                        AnchorLayout:
                                anchor_x: 'left'
                                anchor_y: 'bottom'
                                BoxLayout:
                                        id: page_layout
                                        orientation: 'horizontal'
                                        size_hint: (None, 1)
