#:kivy 1.9.0

<APCard>:
	height: 150
	width: 200
	minimum_width: 200
	size_hint: (None, None)
	orientation: 'vertical'

	mac: mac
	essid: essid
	security_box: security_box
	data_box: data_box
	signal_box: signal_box
	seen: seen

	BoxLayout:
		size_hint: (1, 0.2)
		orientation: 'vertical'
		Label:
			id: mac
			size_hint: (1, 0.5)
			text_size: self.size
			markup: True
			halign: 'center'
		Label:
			id: essid
			size_hint: (1, 0.5)
			text_size: self.size
			markup: True
			halign: 'center'
	BoxLayout:
		id: security_box
		size_hint: (1, 0.1)
		orientation: 'horizontal'
		security: security
		wps: wps
		Label:
			id: security
			size_hint: (0.5, 1)
			markup: True
		Label:
			id: wps
			size_hint: (0.5, 1)
			markup: True
	BoxLayout:
		id: data_box
		size_hint: (1, 0.2)
		orientation: 'horizontal'
		rcv: rcv
		sent: sent
		beacons: beacons
		connected: connected
		BoxLayout:
			orientation: 'vertical'
			size_hint: (0.5, 1)
			Label:
				id: rcv
				size_hint: (1, 0.5)
				markup: True
			Label:
				id: sent
				size_hint: (1, 0.5)
				markup: True
		BoxLayout:
			orientation: 'vertical'
			size_hint: (0.5, 1)
			Label:
				id: beacons
				size_hint: (1, 0.5)
				markup: True
			Label:
				id: connected
				size_hint: (1, 0.5)
				markup: True
	BoxLayout:
		id: signal_box
		size_hint: (1, 0.1)
		orientation: 'horizontal'
		min_sig: min_sig
		avg_sig: avg_sig
		max_sig: max_sig
		Label:
			id: min_sig
			size_hint: (0.33, 1)
			markup: True
		Label:
			id: avg_sig
			size_hint: (0.33, 1)
			markup: True
		Label:
			id: max_sig
			size_hint: (0.33, 1)
			markup: True
	Label:
		id: seen
		size_hint_y: None
		text_size: self.width, None
		height: self.texture_size[1]
		halign: 'center'
		markup: True
