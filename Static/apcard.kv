#:kivy 1.9.0

<APCardInfoBox@BoxLayout>:
		bssid: bssid
		ssid: ssid
		size_hint: (1, 0.2)
		orientation: 'vertical'
		WMSelectableLabel:
				id: bssid
				size_hint: (1, 0.5)
				text_size: self.size
				markup: True
				halign: 'center'
		WMSelectableLabel:
				id: ssid
				size_hint: (1, 0.5)
				text_size: self.size
				markup: True
				halign: 'center'

<APCardSecurityBox@BoxLayout>:
		size_hint: (1, 0.1)
		orientation: 'horizontal'
		security: security
		co: co
		Label:
				id: security
				size_hint: (0.5, 1)
				markup: True
		Label:
				id: co
				size_hint: (0.5, 1)
				markup: True

<APCardDataBox@BoxLayout>:
		size_hint: (1, 0.2)
		orientation: 'horizontal'
		rcv: rcv
		sent: sent
		beacons: beacons
		signal: signal
		BoxLayout:
				orientation: 'vertical'
				size_hint: (0.5, 1)
				Label:
						id: sent
						size_hint: (1, 0.5)
						markup: True
				Label:
						id: rcv
						size_hint: (1, 0.5)
						markup: True
		BoxLayout:
				orientation: 'vertical'
				size_hint: (0.5, 1)
				Label:
						id: beacons
						size_hint: (1, 0.5)
						markup: True
				Label:
						id: signal
						size_hint: (1, 0.5)
						markup: True

<APCard>:
        height: 150
        width: 200
        minimum_width: 200
        size_hint: (None, None)
        orientation: 'vertical'

        main_layout: main_layout
		info_box: info_box
        security_box: security_box
        data_box: data_box
        open_link: open_link

        BoxLayout:
                id: main_layout
                size_hint: (1, 1)
                orientation: 'vertical'

                APCardInfoBox:
						id: info_box
                APCardSecurityBox:
                        id: security_box
                APCardDataBox:
                        id: data_box
                BoxLayout:
                        size_hint: (1, 0.2)
                        Widget:
                        WMImageLink:
                                id: open_link
                                source: 'Static/images/open2.png'
                                allow_stretch: True
                                size_hint: (None, 1)
                                width: 40
                                color: (1, 1, 1, 0.5)
